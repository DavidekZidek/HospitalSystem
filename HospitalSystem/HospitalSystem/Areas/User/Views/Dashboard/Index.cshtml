@using System.Security.Claims
@{
    ViewData["Title"] = "User Dashboard";
    var userName = ViewBag.UserName ?? "Guest";
}

<link rel="stylesheet" href="~/css/dashboard.css" />

<div class="dashboard-container">
    <!-- Boční navigační panel -->
    <aside class="sidebar">
        <div class="logo">
            <a href="/" class="logo-link">
                <h3>Hospital System</h3>
            </a>
        </div>
        <ul class="menu">
            <li>
                <a href="/User/Dashboard/Index" class="menu-link active">
                    <i class="bi bi-person"></i> Profile
                </a>
            </li>
            <li>
                <a href="/User/Dashboard/Appointments" class="menu-link">
                    <i class="bi bi-calendar-check"></i> Appointments
                </a>
            </li>
            <li>
                <a href="/User/Dashboard/Reports" class="menu-link">
                    <i class="bi bi-file-earmark-text"></i> Reports
                </a>
            </li>
            <li>
                <a href="/User/Dashboard/Settings" class="menu-link">
                    <i class="bi bi-gear"></i> Settings
                </a>
            </li>
            <li>
                <a href="/User/Dashboard/Logout" class="menu-link">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </li>
        </ul>
    </aside>

    <!-- Hlavní obsah -->
    <main class="main-content">
        <div class="content">
            <h2>Profile</h2>
            <p>Here you can manage your profile settings and view your information.</p>
        </div>
        <footer>
            <p>Vítejte uživateli - <strong>@userName</strong></p>
        </footer>
    </main>
</div>
