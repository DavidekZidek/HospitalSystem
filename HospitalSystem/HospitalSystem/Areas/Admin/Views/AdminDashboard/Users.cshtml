@model IEnumerable<HospitalSystem.Infrastructure.Identity.User>

@{
    ViewData["Title"] = "Manage Users";
}

<link rel="stylesheet" href="~/css/dashboard.css" />

<div class="dashboard-container">
    <!-- Boční navigační panel -->
    <aside class="sidebar">
        <div class="logo">
            <h3>Hospital System</h3>
        </div>
        <ul class="menu">
            <li><a href="/Admin/AdminDashboard/Index"><i class="bi bi-person"></i> Profile</a></li>
            <li><a href="/Admin/AdminDashboard/Users" class="active"><i class="bi bi-people"></i> Users</a></li>
            <li><a href="/Admin/AdminDashboard/Doctors"><i class="bi bi-person-badge"></i> Doctors</a></li>
            <li><a href="/Admin/AdminDashboard/Logout"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
        </ul>
    </aside>

    <!-- Hlavní obsah -->
    <main class="main-content">
        <div class="content">
            <h2>Manage Users</h2>
            <p>Below is the list of registered users:</p>

            <!-- Tabulka s uživateli -->
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Any())
                {
                    int i = 1;
                    foreach (var user in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <!-- Formulář pro odstranění uživatele -->
                                <form method="post" asp-action="DeleteUser" asp-route-userId="@user.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">No users found.</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </main>
</div>
