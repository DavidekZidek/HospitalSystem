@model HospitalSystem.Domain.Entities.Patient

<h1>Admin: Patient Details</h1>

<table class="table">
    <tr>
        <th>ID:</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name:</th>
        <td>@Model.Person.FirstName @Model.Person.LastName</td>
    </tr>
    <tr>
        <th>Birth Number:</th>
        <td>@Model.BirthNumber</td>
    </tr>
    <tr>
        <th>Date of Birth:</th>
        <td>@Model.DateOfBirth.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Health Insurance:</th>
        <td>@Model.HealthInsurance</td>
    </tr>
</table>
