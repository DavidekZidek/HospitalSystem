@model IEnumerable<HospitalSystem.Domain.Entities.Patient>

<h1>Admin: Patient List</h1>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Birth Number</th>
        <th>Date of Birth</th>
        <th>Health Insurance</th>
        <th>Phone</th>
        <th>Email</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var patient in Model)
    {
        <tr>
            <td>@patient.Id</td>
            <td>@(patient.Person != null ? patient.Person.FirstName + " " + patient.Person.LastName : "Unknown")</td>
            <td>@patient.BirthNumber</td>
            <td>@patient.DateOfBirth.ToShortDateString()</td>
            <td>@patient.HealthInsurance</td>
            <td>@patient.Person?.Phone</td>
            <td>@patient.Person?.Mail</td>
        </tr>
    }
    </tbody>
</table>