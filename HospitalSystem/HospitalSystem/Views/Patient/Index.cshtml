@model IEnumerable<HospitalSystem.Domain.Entities.Patient>

<!DOCTYPE html>
<html>
<head>
    <title>Patients</title>
</head>
<body>
<h1>List of Patients</h1>
<a href="/Patient/Create">Add New Patient</a>
<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Birth Number</th>
        <th>Health Insurance</th>
        <th>Date of Birth</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var patient in Model)
    {
        <tr>
            <td>@patient.Id</td>
            <td>@patient.BirthNumber</td>
            <td>@patient.HealthInsurance</td>
            <td>@patient.DateOfBirth.ToShortDateString()</td>
        </tr>
    }
    </tbody>
</table>
</body>
</html>