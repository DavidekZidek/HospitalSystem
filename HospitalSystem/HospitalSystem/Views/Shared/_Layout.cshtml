<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospitalSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
<header class="bg-light py-1 border-bottom">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <div>
            <span>Location: Hospital Location 665 89</span>
        </div>
        <div class="d-flex align-items-center">
            <a href="#" class="text-decoration-none me-3">English</a>
        </div>
    </div>
</header>

<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-4">
    <div class="container-fluid">
        <a class="navbar-brand ps-3" asp-area="" asp-controller="Home" asp-action="Index">LOGO</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item px-3"><a class="nav-link" href="#">Link</a></li>
                <li class="nav-item px-3"><a class="nav-link" href="#">Link</a></li>
                <li class="nav-item px-3"><a class="nav-link" href="#">Link</a></li>
                <li class="nav-item px-3"><a class="nav-link" href="#">Link</a></li>
                <li class="nav-item px-3"><a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                
                
                
                @* @if (User.Identity.IsAuthenticated == true && (User.IsInRole(nameof(Capacitys.Admin)) || User.IsInRole(nameof(Capacitys.Doctor)))) *@
                @* { *@
                @*     <li class="nav-item"> *@
                @*         <a class="nav-link text-dark" asp-area="Admin" asp-controller="Product" asp-action="Select">Products</a> *@
                @*     </li> *@
                @* } *@
                
                
                
            </ul>
            @{
            @if (User.Identity.IsAuthenticated == false)
            {
            <ul class="navbar-nav navbar-right">
                <li class="nav-item"><a class="nav-link text-dark" asp-area="Security" asp-controller="Account" asp-action="Register"><i class="bi bi-person-plus"></i> Register</a></li>
                <li class="nav-item"><a class="nav-link text-dark" asp-area="Security" asp-controller="Account" asp-action="Login"><i class="bi bi-lock"></i> Login</a></li>
            </ul>
            }
            else
            {
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-person"></i> Logged as @User.Identity.Name</a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item text-dark" asp-area="Security" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-1"></i> Logout</a></li>
                    </ul>
                </li>
            </ul>
            }
            }
        </div>
    </div>
</nav>

<main class="container-fluid p-0">
    @RenderBody()
</main>

<div class="d-flex justify-content-center align-items-center">
    <div class="row text-center">
        <h2 class="py-3">Services</h2>
        <!-- Vaccination Card -->
        <div class="col-md-4 p-5">
            <div class="card p-4 d-flex flex-column justify-content-between">
                <h3 class="card-title mb-3">Vaccination</h3>
                <div class="card-image my-3">
                    <img src="https://via.placeholder.com/150" alt="Vaccination" class="img-fluid">
                </div>
                <div class="card-body">
                    <p>Protect yourself and your loved ones with our comprehensive vaccination services.</p>
                    <a href="#" class="btn btn-primary mt-3">Learn More</a>
                </div>
            </div>
        </div>
        <!-- Blood Tests Card -->
        <div class="col-md-4 p-5">
            <div class="card p-4 d-flex flex-column justify-content-between">
                <h3 class="card-title mb-3">Blood Tests</h3>
                <div class="card-image my-3">
                    <img src="https://via.placeholder.com/150" alt="Blood Tests" class="img-fluid">
                </div>
                <div class="card-body">
                    <p>Get accurate and reliable blood tests with fast results. Book your test and ensure your health is in check!</p>
                    <a href="#" class="btn btn-primary mt-3">Learn More</a>
                </div>
            </div>
        </div>
        <!-- Health Check-up Card -->
        <div class="col-md-4 p-5">
            <div class="card p-4 d-flex flex-column justify-content-between">
                <h3 class="card-title mb-3">Health Check-up</h3>
                <div class="card-image my-3">
                    <img src="https://via.placeholder.com/150" alt="Health Check-up" class="img-fluid">
                </div>
                <div class="card-body">
                    <p>Stay proactive with regular health check-ups. Detect issues early and maintain your well-being.</p>
                    <a href="#" class="btn btn-primary mt-3">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center py-5 bg-primary">
    <h3 class="py-3">Current statistics</h3>
    <div class="d-flex justify-content-center flex-wrap gap-4">
        <div class="mx-4 text-center">
            <h4>123,456</h4>
            <p>Visitors in 2024</p>
        </div>
        <div class="mx-4 text-center">
            <h4>8,756</h4>
            <p>Successful Surgeries</p>
        </div>
        <div class="mx-4 text-center">
            <h4>15,890</h4>
            <p>Patients Admitted</p>
        </div>
        <div class="mx-4 text-center">
            <h4>5,432</h4>
            <p>Emergency Cases</p>
        </div>
        <div class="mx-4 text-center">
            <h4>1,234</h4>
            <p>Hospital Staff</p>
        </div>
    </div>
</div>


<div class="text-center m-5">
    <h3>Reviews</h3>
    <div class="d-flex justify-content-center flex-wrap gap-3">
        <!-- Card 1 -->
        <div class="card-rating mx-3 px-4 py-3">
            <p><strong>Rating:</strong> ⭐⭐⭐⭐⭐</p>
            <p>"Great service and friendly staff!"</p>
            <p><em>- John Doe</em></p>
        </div>
        <!-- Card 2 -->
        <div class="card-rating mx-3 px-4 py-3">
            <p><strong>Rating:</strong> ⭐⭐⭐⭐☆</p>
            <p>"Quick and efficient care."</p>
            <p><em>- Jane Smith</em></p>
        </div>
        <!-- Card 3 -->
        <div class="card-rating mx-3 px-4 py-3">
            <p><strong>Rating:</strong> ⭐⭐⭐⭐⭐</p>
            <p>"Highly recommend this hospital!"</p>
            <p><em>- Alice Brown</em></p>
        </div>
    </div>
</div>

<div class="text-center my-5">
    <h3>Find Us</h3>
    <div class="map-container mt-4" style="height: 400px; width: 100%; max-width: 800px; margin: 0 auto;">
        <!-- Embed Google Maps iframe -->
        <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.8330824508514!2d144.96305791531592!3d-37.81627937975157!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0f11fd81%3A0xf577d0c5d3b1e22b!2sMelbourne%20CBD%2C%20Victoria%2C%20Australia!5e0!3m2!1sen!2sus!4v1693884930911!5m2!1sen!2sus"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    </div>
</div>

<footer class="bg-dark text-white py-4">
    <div class="container">
        <div class="row">
            <!-- About us -->
            <div class="col-md-3">
                <h6>About Us</h6>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-white text-decoration-none">Our Mission</a></li>
                    <li><a href="#" class="text-white text-decoration-none">Our Team</a></li>
                </ul>
            </div>
            <!-- Important links -->
            <div class="col-md-3">
                <h6>Important Links</h6>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-white text-decoration-none">Privacy Policy</a></li>
                    <li><a href="#" class="text-white text-decoration-none">Terms of Service</a></li>
                    <li><a href="#" class="text-white text-decoration-none">Career Opportunities</a></li>
                </ul>
            </div>
            <!-- FAQs -->
            <div class="col-md-3">
                <h6>FAQs</h6>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-white text-decoration-none">How to book an appointment?</a></li>
                    <li><a href="#" class="text-white text-decoration-none">What services do we offer?</a></li>
                    <li><a href="#" class="text-white text-decoration-none">Insurance information</a></li>
                </ul>
            </div>
            <!-- Contacts -->
            <div class="col-md-3">
                <h6>Contacts</h6>
                <p><strong>Address:</strong> 123 Hospital Street, Health City</p>
                <p><strong>Phone:</strong> +123 456 789</p>
                <p><strong>Email:</strong> info@hospitalsystem.com</p>
                <p><strong>Working Hours:</strong> Mon-Fri 8:00 AM - 6:00 PM</p>
            </div>
        </div>
    </div>
</footer>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
