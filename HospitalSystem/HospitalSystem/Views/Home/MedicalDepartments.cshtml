@{
    ViewData["Title"] = "Medical Departments";
}
<link rel="stylesheet" href="~/css/departments.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<div class="container py-5">
    <h1 class="text-center mb-4">Medical Departments</h1>
    <p class="lead text-center">
        Our hospital offers specialized care across various departments staffed by leading experts. Explore our departments and services tailored to your medical needs.
    </p>

    <!-- Cardiology -->
    <div class="row align-items-center mb-5">
        <div class="col-md-4 text-center">
            <i class="bi bi-heart-pulse text-danger" style="font-size: 4rem;"></i>
        </div>
        <div class="col-md-8">
            <h3>Cardiology</h3>
            <p>
                Our cardiology department offers state-of-the-art cardiac care and surgical interventions. We provide comprehensive diagnosis and treatment plans for heart-related issues, catering to all age groups.
            </p>
        </div>
    </div>

    <!-- Dermatology -->
    <div class="row align-items-center mb-5 flex-md-row-reverse">
        <div class="col-md-4 text-center">
            <i class="bi bi-droplet text-primary" style="font-size: 4rem;"></i> <!-- Ikona pro Dermatology -->
        </div>
        <div class="col-md-8">
            <h3>Dermatology</h3>
            <p>
                Our dermatology department provides expert care for a variety of skin conditions, including acne, eczema, and skin cancer. Advanced treatment options ensure healthy and radiant skin for all our patients.
            </p>
        </div>
    </div>


    <!-- Orthopedics -->
    <div class="row align-items-center mb-5">
        <div class="col-md-4 text-center">
            <i class="bi bi-bandaid text-warning" style="font-size: 4rem;"></i>
        </div>
        <div class="col-md-8">
            <h3>Orthopedics</h3>
            <p>
                Our orthopedics department provides specialized care for injuries, arthritis, and mobility issues. We offer advanced surgical options, including joint replacements and minimally invasive procedures.
            </p>
        </div>
    </div>
</div>
