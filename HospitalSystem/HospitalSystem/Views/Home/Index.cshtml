@{
    ViewData["Title"] = "Home";
}
<link rel="stylesheet" href="~/css/home.css" />

<!-- Uvítací část -->
<div class="welcome-section mb-4">
    <h1 class="display-3">Welcome to Hospital System</h1>
    <p class="lead">Your health, our priority. Explore our services and stay proactive!</p>
    <a href="#services" class="btn btn-primary btn-lg mt-4">Get Started</a>
</div>

<div class="container">
    <!-- Služby -->
    <div id="services" class="row text-center">
        <div class="col-md-4 p-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="my-3 icon text-primary">
                        <i class="bi bi-shield-plus"></i>
                    </div>
                    <h5 class="card-title">Vaccination</h5>
                    <p>Protect yourself and your loved ones with our comprehensive vaccination services.</p>
                    <a href="#" class="btn btn-primary mt-2">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 p-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="my-3 icon text-danger">
                        <i class="bi bi-droplet"></i>
                    </div>
                    <h5 class="card-title">Blood Tests</h5>
                    <p>Get accurate and reliable blood tests with fast results.</p>
                    <a href="#" class="btn btn-primary mt-2">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 p-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="my-3 icon text-success">
                        <i class="bi bi-heart-pulse"></i>
                    </div>
                    <h5 class="card-title">Health Check-up</h5>
                    <p>Stay proactive with regular health check-ups.</p>
                    <a href="#" class="btn btn-primary mt-2">Learn More</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiky -->
    <div class="stats-section text-center mb-4">
        <h3>Current Statistics</h3>
        <div class="row justify-content-center">
            <div class="col-md-2 stat-card">
                <h4>123,456</h4>
                <p>Visitors in 2024</p>
            </div>
            <div class="col-md-2 stat-card">
                <h4>8,756</h4>
                <p>Successful Surgeries</p>
            </div>
            <div class="col-md-2 stat-card">
                <h4>15,890</h4>
                <p>Patients Admitted</p>
            </div>
            <div class="col-md-2 stat-card">
                <h4>5,432</h4>
                <p>Emergency Cases</p>
            </div>
        </div>
    </div>

    <!-- Hodnocení -->
    <div class="container mb-4">
        <h3 class="text-center mb-4">Reviews</h3>
        <div class="row justify-content-center">
            <div class="col-md-2">
                <div class="card text-center shadow-sm review-card">
                    <p>Rating: ⭐⭐⭐⭐⭐</p>
                    <p>"Excellent service and friendly staff!"</p>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center shadow-sm review-card">
                    <p>Rating: ⭐⭐⭐⭐☆</p>
                    <p>"Quick and reliable medical support."</p>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center shadow-sm review-card">
                    <p>Rating: ⭐⭐⭐⭐⭐</p>
                    <p>"Highly recommended for families."</p>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center shadow-sm review-card">
                    <p>Rating: ⭐⭐⭐⭐☆</p>
                    <p>"Professional and efficient care."</p>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center shadow-sm review-card">
                    <p>Rating: ⭐⭐⭐⭐⭐</p>
                    <p>"Great environment and staff!"</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Kontakty -->
    <div class="text-center mb-4">
        <h3>Find Us</h3>
        <div class="map-container mt-4">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.8330824508514!2d144.96305791531592!3d-37.81627937975157!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0f11fd81%3A0xf577d0c5d3b1e22b!2sMelbourne%20CBD%2C%20Victoria%2C%20Australia!5e0!3m2!1sen!2sus!4v1693884930911!5m2!1sen!2sus"
                width="100%"
                height="400"
                allowfullscreen=""
                loading="lazy">
            </iframe>
        </div>
    </div>
</div>
